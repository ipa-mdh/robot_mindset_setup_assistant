<?xml version="1.0"?>
<package format="2">
  <name>{{ args.package.name |regex_replace('[^A-Za-z0-9]', '_')}}</name>
  <version>{{ args.package.version }}</version>
  <description>{{ args.package.description }}</description>

  <!-- One maintainer tag required, multiple allowed, one person per tag -->
  <!-- Example:  -->
  <!-- <maintainer email="jane.doe@example.com">Jane Doe</maintainer> -->
  <maintainer email="{{ args.package.maintainer_email }}">{{ args.package.maintainer }}</maintainer>


  <!-- One license tag required, multiple allowed, one license per tag -->
  <!-- Commonly used license strings: -->
  <!--   BSD, MIT, Boost Software License, GPLv2, GPLv3, LGPLv2.1, LGPLv3 -->
  <license>{{ args.package.license.value }}</license>

</package>
