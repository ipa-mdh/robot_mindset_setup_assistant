"""Base classes for ROS handler implementations."""

from __future__ import annotations

from typing import Optional

from rclpy.node import Node


class BaseRosHandler:
    """Stores a reference to the ROS node for derived handlers."""

    def __init__(self, node: Node) -> None:
        self._node: Node = node

    @property
    def node(self) -> Node:
        return self._node

    def initialize(self) -> None:  # pragma: no cover - to be overridden
        """Initialise ROS resources."""

    def shutdown(self) -> None:  # pragma: no cover - to be overridden
        """Release ROS resources."""
