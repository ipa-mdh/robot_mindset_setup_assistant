    logic_module_.process_srv_{{interface.name}}(res_sucess, res_msg);
    res.success = res_sucess;
    res.message = res_msg;
    return  res_sucess;
    {%- elif interface.msgs == "std_srvs/Empty" %}
    ROS_INFO("Received service {{ interface.name }}");
    // Process the request
    logic_module_.process_srv_{{interface.name}}();
    // No response needed
    return  true;
