<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="crx10ia_l"
    params="robot_ip:='10.11.31.121'
              prefix:='robot_fanuc'
              simulation_controllers:='controllers.yaml'
              read_only:='false' 
              use_rmi:='false' 
              use_mock_hardware:=false 
              gz:=false">


