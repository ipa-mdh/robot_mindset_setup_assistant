    </xacro:if> -->

    <!-- <xacro:unless value="${gz}">
      <xacro:include filename="$(find robot_fanuc)/urdf/robot_fanuc.ros2_control.xacro" />
      <xacro:robot_fanuc_ros2_control
        name="crx10ia_l"
        simulation_controllers="${simulation_controllers}"
        prefix="${prefix}"
        robot_ip="${robot_ip}"
        read_only="${read_only}"
        use_rmi="${use_rmi}"
        use_mock_hardware="${use_mock_hardware}"
        sim_gazebo_classic="true"
        sim_gazebo="false"/>
    </xacro:unless> -->

    <material name="black">
      <color rgba="0 0 0 1.0" />
    </material>
    <material name="white">
      <color rgba="1.0 1.0 1.0 1.00" />
    </material>

    <!-- links -->
    <link name="${prefix}_base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/visual/link_base.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/collision/link_base.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_link_1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/visual/link_1.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="white" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/collision/link_1.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_link_2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/visual/link_2.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="white" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/collision/link_2.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_link_3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/visual/link_3.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="white" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/collision/link_3.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_link_4">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/visual/link_4.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="white" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/collision/link_4.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_link_5">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/visual/link_5.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="white" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/collision/link_5.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <link name="${prefix}_link_6">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/visual/link_6.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://crx_description/meshes/crx10ia_l/collision/link_6.stl"
            scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <!-- joints -->
    <joint name="${prefix}_J1" type="revolute">
      <origin xyz="0 0 0.1277" rpy="0 0 0" />
      <parent link="${prefix}_base_link" />
      <child link="${prefix}_link_1" />
      <axis xyz="0 0 1" />
      <limit lower="${-180 * pi / 180}" upper="${180 * pi / 180}" effort="0"
        velocity="${80 * pi / 120}" />
    </joint>

    <joint name="${prefix}_J2" type="revolute">
      <origin xyz="0 0 0.1173" rpy="0 0 0" />
      <parent link="${prefix}_link_1" />
      <child link="${prefix}_link_2" />
      <axis xyz="0 1 0" />
      <limit lower="${-180 * pi / 180}" upper="${180 * pi / 180}" effort="0"
        velocity="${80 * pi / 120}" />
    </joint>

    <joint name="${prefix}_J3" type="revolute">
      <origin xyz="0 0 0.710" rpy="0 0 0" />
      <parent link="${prefix}_link_2" />
      <child link="${prefix}_link_3" />
      <axis xyz="0 -1 0" />
      <limit lower="${-270 * pi / 180}" upper="${270 * pi / 180}" effort="0"
        velocity="${120 * pi / 180}" />
    </joint>

    <joint name="${prefix}_J4" type="revolute">
      <origin xyz="0.540 0 0" rpy="0 0 0" />
      <parent link="${prefix}_link_3" />
      <child link="${prefix}_link_4" />
      <axis xyz="-1 0 0" />
      <limit lower="${-190 * pi / 180}" upper="${190 * pi / 180}" effort="0"
        velocity="${112 * pi / 180}" />
    </joint>

    <joint name="${prefix}_J5" type="revolute">
      <origin xyz="0 -0.150 0" rpy="0 0 0" />
      <parent link="${prefix}_link_4" />
      <child link="${prefix}_link_5" />
      <axis xyz="0 -1 0" />
      <limit lower="${-180 * pi / 180}" upper="${180 * pi / 180}" effort="0"
        velocity="${90 * pi / 180}" />
    </joint>

    <joint name="${prefix}_J6" type="revolute">
      <origin xyz="0.160 0 0" rpy="0 0 0" />
      <parent link="${prefix}_link_5" />
      <child link="${prefix}_link_6" />
      <axis xyz="-1 0 0" />
      <limit lower="${-225 * pi / 180}" upper="${225 * pi / 180}" effort="0"
        velocity="${112 * pi / 180}" />
    </joint>

    <!-- fanuc world -->
    <link name="${prefix}_fanuc_world" />
    <joint name="${prefix}_base_link-fanuc_world" type="fixed">
      <origin xyz="0 0 0.245" rpy="0 0 0" />
      <parent link="${prefix}_base_link" />
      <child link="${prefix}_fanuc_world" />
    </joint>

    <!-- flange -->
    <link name="${prefix}_flange" />
    <joint name="${prefix}_J6-flange" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="${prefix}_link_6" />
      <child link="${prefix}_flange" />
    </joint>

    <!-- tcp -->
    <link name="${prefix}_tcp" />
    <joint name="${prefix}_flange-tcp" type="fixed">
      <origin xyz="0 0 0" rpy="0 ${pi/2} 0" />
      <parent link="${prefix}_flange" />
      <child link="${prefix}_tcp" />
    </joint>

  </xacro:macro>
</robot>